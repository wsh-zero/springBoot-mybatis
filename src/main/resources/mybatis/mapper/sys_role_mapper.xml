<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zero.user.mapper.SysRoleMapper">
    <resultMap id="resultSysRoleVO" type="SysRoleVO">
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
    </resultMap>
    <sql id="list_fields">
        id, role_name
    </sql>
    <sql id="list_sql">
        <where>

        </where>
    </sql>
    <select id="getList" resultMap="resultSysRoleVO">
        select
        <include refid="list_fields"/>
        from sys_role
        <include refid="list_sql"/>
        <if test="pageNum !=-1 and pageSize!=-1">
            limit #{pageNum},#{pageSize}
        </if>
    </select>

    <select id="getCount" resultType="int">
        select count(1) from sys_role
        <include refid="list_sql"/>
    </select>
    <insert id="save">
        insert into sys_role (id, role_name)
        values (#{id}, #{roleName})
    </insert>
</mapper>